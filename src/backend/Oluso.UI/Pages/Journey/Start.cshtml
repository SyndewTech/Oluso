@page "/journey/start/{policyId}"
@model Oluso.UI.Pages.Journey.StartModel
@{
    Layout = null;
    ViewData["Title"] = "Starting Journey";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oluso</title>
    <link rel="stylesheet" href="/css/journey.css" />
</head>
<body class="journey-page">
    <div class="journey-wrapper">
        <div class="journey-container">
            <div class="journey-brand">
                <div class="journey-brand-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                    </svg>
                </div>
                <span class="journey-brand-text">Oluso</span>
            </div>
            <div class="journey-card">
                <div class="loading-card">
                    <div class="loading-spinner">
                        <svg class="spinner" viewBox="0 0 50 50">
                            <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="4"></circle>
                        </svg>
                    </div>
                    <p class="loading-text">Starting journey...</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
