@using Oluso.UserJourneys.Steps
@model ConsentViewModel

@if (!string.IsNullOrEmpty(Model?.ClientLogoUri))
{
    <div class="text-center mb-3">
        <img src="@Model.ClientLogoUri" alt="@Model.ClientName" style="max-width: 120px; max-height: 60px;" />
    </div>
}

<h1 class="title text-center">Authorize @Model?.ClientName</h1>
<p class="subtitle text-center">This application wants to access your account</p>

@if (!string.IsNullOrEmpty(Model?.ClientUri))
{
    <p class="text-center text-muted" style="font-size: 0.875rem;">
        <a href="@Model.ClientUri" target="_blank" rel="noopener">@Model.ClientUri</a>
    </p>
}

@if (!string.IsNullOrEmpty(Model?.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        <svg class="alert-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
        <span>@Model.ErrorMessage</span>
    </div>
}

<form method="post" id="consentForm">
    @if (Model?.IdentityScopes?.Any() == true)
    {
        <div class="scope-section mb-3">
            <label style="font-weight: 600; margin-bottom: 0.5rem; display: block;">Personal Information</label>
            <p class="form-text mb-2">This application is requesting access to:</p>

            @foreach (var scope in Model.IdentityScopes)
            {
                <div class="scope-item @(scope.Emphasize ? "emphasized" : "")">
                    <div class="form-check">
                        <input type="checkbox"
                               id="scope_@scope.Name"
                               name="scope_@scope.Name"
                               class="form-check-input"
                               value="true"
                               @(scope.Checked ? "checked" : "")
                               @(scope.Required ? "disabled checked" : "") />
                        @if (scope.Required)
                        {
                            <input type="hidden" name="scope_@scope.Name" value="true" />
                        }
                        <label class="form-check-label" for="scope_@scope.Name">
                            <strong>@scope.DisplayName</strong>
                            @if (scope.Required)
                            {
                                <span class="required-badge">Required</span>
                            }
                        </label>
                    </div>
                    @if (!string.IsNullOrEmpty(scope.Description))
                    {
                        <p class="form-text" style="margin-left: 1.625rem; margin-bottom: 0;">@scope.Description</p>
                    }
                </div>
            }
        </div>
    }

    @if (Model?.ApiScopes?.Any() == true)
    {
        <div class="scope-section mb-3">
            <label style="font-weight: 600; margin-bottom: 0.5rem; display: block;">Application Access</label>

            @foreach (var scope in Model.ApiScopes)
            {
                <div class="scope-item @(scope.Emphasize ? "emphasized" : "")">
                    <div class="form-check">
                        <input type="checkbox"
                               id="scope_@scope.Name"
                               name="scope_@scope.Name"
                               class="form-check-input"
                               value="true"
                               @(scope.Checked ? "checked" : "")
                               @(scope.Required ? "disabled checked" : "") />
                        @if (scope.Required)
                        {
                            <input type="hidden" name="scope_@scope.Name" value="true" />
                        }
                        <label class="form-check-label" for="scope_@scope.Name">
                            <strong>@scope.DisplayName</strong>
                            @if (scope.Required)
                            {
                                <span class="required-badge">Required</span>
                            }
                        </label>
                    </div>
                    @if (!string.IsNullOrEmpty(scope.Description))
                    {
                        <p class="form-text" style="margin-left: 1.625rem; margin-bottom: 0;">@scope.Description</p>
                    }
                </div>
            }
        </div>
    }

    @if (Model?.AllowRememberConsent == true)
    {
        <div class="form-check mb-3">
            <input type="checkbox"
                   id="rememberConsent"
                   name="remember_consent"
                   class="form-check-input"
                   value="true" />
            <label class="form-check-label" for="rememberConsent">
                Remember my decision for this application
            </label>
        </div>
    }

    <div class="consent-actions">
        <button type="submit" name="consent_action" value="deny" class="btn btn-secondary">
            Deny
        </button>
        <button type="submit" name="consent_action" value="allow" class="btn btn-primary">
            Allow Access
        </button>
    </div>
</form>

<style>
.scope-section {
    margin-bottom: 1.5rem;
}

.scope-item {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    margin-bottom: 0.5rem;
    background: #fff;
}

.scope-item.emphasized {
    border-color: var(--primary-color);
    background: var(--primary-light);
}

.scope-item .form-check {
    margin-bottom: 0;
}

.required-badge {
    font-size: 0.6875rem;
    background: var(--text-muted);
    color: white;
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    margin-left: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
}

.consent-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1.5rem;
}

.consent-actions .btn {
    min-width: 120px;
}
</style>
