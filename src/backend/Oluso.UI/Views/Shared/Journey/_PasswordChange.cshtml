@using Oluso.UserJourneys.Steps
@model PasswordChangeViewModel

<div class="password-change-card">
    <h1 class="title">Change Password</h1>

    @if (!string.IsNullOrEmpty(Model?.TenantName))
    {
        <p class="subtitle">@Model.TenantName</p>
    }

    @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model?.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <form method="post" id="passwordChangeForm">
        @if (Model?.RequireCurrentPassword == true)
        {
            <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password"
                       id="currentPassword"
                       name="currentPassword"
                       class="form-control"
                       autocomplete="current-password"
                       required />
            </div>
        }

        <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password"
                   id="newPassword"
                   name="newPassword"
                   class="form-control"
                   autocomplete="new-password"
                   required />

            <div class="password-requirements">
                <small class="text-muted">Password must:</small>
                <ul class="requirements-list">
                    @if (Model?.MinPasswordLength > 0)
                    {
                        <li id="req-length">Be at least @Model.MinPasswordLength characters</li>
                    }
                    @if (Model?.RequireUppercase == true)
                    {
                        <li id="req-upper">Include an uppercase letter</li>
                    }
                    @if (Model?.RequireLowercase == true)
                    {
                        <li id="req-lower">Include a lowercase letter</li>
                    }
                    @if (Model?.RequireDigit == true)
                    {
                        <li id="req-digit">Include a number</li>
                    }
                    @if (Model?.RequireSpecialChar == true)
                    {
                        <li id="req-special">Include a special character</li>
                    }
                </ul>
            </div>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm New Password</label>
            <input type="password"
                   id="confirmPassword"
                   name="confirmPassword"
                   class="form-control"
                   autocomplete="new-password"
                   required />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Change Password</button>
    </form>
</div>

<script>
document.getElementById('passwordChangeForm').addEventListener('submit', function(e) {
    var newPassword = document.getElementById('newPassword').value;
    var confirmPassword = document.getElementById('confirmPassword').value;

    if (newPassword !== confirmPassword) {
        e.preventDefault();
        alert('Passwords do not match');
        return false;
    }
});
</script>

<style>
.password-change-card {
    max-width: 400px;
    margin: 0 auto;
    padding: 2rem;
}

.title {
    margin-bottom: 0.5rem;
    text-align: center;
}

.subtitle {
    color: #6c757d;
    margin-bottom: 1.5rem;
    text-align: center;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.form-control {
    display: block;
    width: 100%;
    padding: 0.5rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
}

.form-control.is-invalid {
    border-color: #dc3545;
}

.invalid-feedback {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.password-requirements {
    margin-top: 0.5rem;
    padding: 0.75rem;
    background: #f8f9fa;
    border-radius: 0.25rem;
}

.requirements-list {
    margin: 0.5rem 0 0 1rem;
    padding: 0;
    font-size: 0.875rem;
}

.requirements-list li {
    margin-bottom: 0.25rem;
}

.btn-block {
    display: block;
    width: 100%;
    margin-top: 1.5rem;
}

.btn-primary {
    padding: 0.5rem 1rem;
    background-color: #007bff;
    border-color: #007bff;
    color: white;
    border-radius: 0.25rem;
    cursor: pointer;
}

.alert {
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    border-radius: 0.25rem;
}

.alert-danger {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
}

.alert-success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
}
</style>
