@model Oluso.UserJourneys.Steps.PasswordlessEmailViewModel

<div class="passwordless-email-form">
    <h2>Sign in with Email</h2>
    <p class="description">Enter your email address and we'll send you a @(Model.Mode == "magic_link" ? "magic link" : "verification code") to sign in.</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <form method="post">
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="form-control"
                   placeholder="you@example.com"
                   value="@Model.Email"
                   required
                   autofocus />
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">
                @(Model.Mode == "magic_link" ? "Send Magic Link" : "Send Code")
            </button>
        </div>
    </form>

    @if (Model.AllowSignUp)
    {
        <div class="mt-4 text-center">
            <p class="text-muted">Don't have an account? You'll be able to create one after verifying your email.</p>
        </div>
    }
</div>
