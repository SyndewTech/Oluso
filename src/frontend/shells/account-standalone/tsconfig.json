{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@oluso/account-ui": ["../../AccountUI/src"],
      "@oluso/account-ui/*": ["../../AccountUI/src/*"],
      "@oluso/ui-core": ["../../ui-core/src"],
      "@oluso/ui-core/*": ["../../ui-core/src/*"],
      "@oluso/fido2-ui": ["../../libs/fido2-ui"],
      "@oluso/fido2-ui/*": ["../../libs/fido2-ui/*"]
    }
  },
  "include": [
    "src",
    "../../AccountUI/src",
    "../../ui-core/src",
    "../../libs/fido2-ui"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
